<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/streamImagePreview"
        android:layout_width="@dimen/streamPreviewImageSize"
        android:layout_height="@dimen/streamPreviewImageSize"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark" />


    <TextView
        android:id="@+id/streamUsername"
        android:layout_width="@dimen/streamPreviewImageSize"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/streamImagePreview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Vaironl"
        android:textColor="#fff"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/streamTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/streamImagePreview"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Making a game in Unity 3D- For IOS/Android"
        android:textColor="#2873ff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/streamViewCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/streamTitle"
        android:layout_marginRight="12dp"
        android:gravity="right"
        android:text="31746"
        android:textColor="#484545"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/streamLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/streamTitle"
        android:layout_marginLeft="12dp"
        android:gravity="left"
        android:text="Java/Android"
        android:textColor="#484545"
        android:textSize="24sp" />


</RelativeLayout>